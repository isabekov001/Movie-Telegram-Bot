импортный  телебот
от  telebot  импортных  типов

бот  =  телебот . TeleBot ( '1460821270: AAGs-X7Y4DKvHRN-hE3QN9TnhuRM0IOtpPw' )

@ бот . message_handler ( commands = [ 'сайт' ])
def  open_website ( сообщение ):
	разметка  =  типы . InlineKeyboardMarkup ()
	разметка . add ( types . InlineKeyboardButton ( "Перейти на сайт" , url = "https://kinogo-net.org/v8/" ))
	бот . send_message ( сообщение . чат . id ,
			"Нажмите на кнопку ниже и начинай смотреть фильмы прямо сейчас" ,
			parse_mode = 'html' , reply_markup = разметка )

@ бот . message_handler ( commands = [ 'начало' ])
def  start ( сообщение ):
    sti  =  open ( 'static / sticker.webp' , 'rb' )
    бот . send_sticker ( сообщение . чат . id , sti )

    разметка  =  типы . ReplyKeyboardMarkup ( resize_keyboard = True , row_width = 2 )
    btn1  =  типы . KeyboardButton ( 'Жанры' )
    btn2  =  типы . KeyboardButton ( 'Связь с разработчиком' )
    разметка . добавить ( btn1 , btn2 )
    send_mess  =  f "<b> Привет { message . from_user . first_name } </b>! \ n Чтобы смотреть фильмы бесплатно и в хорошем качестве нажми на кнопку ниже или напиши мне жанр фильма"
    бот . send_message ( сообщение . чат . id , send_mess , parse_mode = 'html' , reply_markup = разметка )

@ бот . message_handler ( content_types = [ 'текст' ])
def  mess ( сообщение ):
    если  сообщение . чат . type  ==  'private' :  
        если  сообщение . text  ==  'Жанры' :
            разметка  =  типы . ReplyKeyboardMarkup ( resize_keyboard = True , row_width = 1 )
            item1  =  типы . KeyboardButton ( 'Боевики' )
            item2  =  типы . KeyboardButton ( Детективы )
            item3  =  типы . KeyboardButton ( 'Фантастика' )
            item4  =  типы . KeyboardButton ( 'Мультфильмы' )
            item5  =  типы . KeyboardButton ( 'Мелодрамы' )
            item6  =  типы . KeyboardButton ( 'Комедии' )
            разметка . добавить ( item1 , item2 , item3 , item4 , Item5 , item6 )

            бот . send_message ( сообщение . чат . id , 'Выбор жанры' , reply_markup = разметка )
         сообщение elif . text  ==  'Боевики' :
            клавиатура  =  типы . InlineKeyboardMarkup ( row_width = 1 )
            url_btn1  =  типы . InlineKeyboardButton ( text = "Звёздный путь: Дискавери" , url = "https://kinogo-net.org/v8/1861-zvezdnyy-put-diskaveri-2017.html" )
            url_btn2  =  типы . InlineKeyboardButton ( text = "SWAT: Спецназ города ангелов" , url = "https://kinogo-net.org/v8/4337-swat-specnaz-goroda-angelov-2017.html" )
            url_btn3  =  типы . InlineKeyboardButton ( text = "Неудержимые 3" , url = "https://kinogo-net.org/v8/5118-neuderzhimye-3-2014.html" )
            клавиатура . добавить ( url_btn1 , url_btn2 , url_btn3 )
            бот . send_message ( сообщение . чат . id , "Боевики" , reply_markup = keyboard )
         сообщение elif . text  ==  'Детективы' :
